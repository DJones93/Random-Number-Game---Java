package com.Declan;

import java.util.Random;
import java.util.Scanner;

public class Main {

    public static void main(String[] args) {
        final int upperNumber = 100;

        Random game = new Random();
        int randomNumber = game.nextInt(upperNumber);
        Scanner scanner = new Scanner(System.in);
        System.out.print("Please Enter a Number Between 1 and 100: ");
        int userNumber = scanner.nextInt();

        gameMethod(randomNumber, userNumber);
    }

    private static void gameMethod(int randomNumber, int userNumber) {
        while (userNumber < 100 && userNumber > 1){
            System.out.print("Please Enter a Number Between 1 and 100:");
                break;}

        if (userNumber == randomNumber);
        {
                System.out.print("Well Done, You Have Correctly Guessed the Number!");
        }
        if (userNumber > randomNumber && userNumber < randomNumber) ;
        {
                System.out.print("You Have Not Correctly Guessed The Number, Please Try Again!");
        }
    }
}
